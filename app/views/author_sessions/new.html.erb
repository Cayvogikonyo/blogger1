<div class="login"><h1>Login</h1>
<%= form_tag author_sessions_path, method: :post do %>
	<div class= "login-field">
		<%= label_tag :email %><br>
		<%= text_field_tag :email %>
		<br>
	</div>
	<div class= "login-field"><br>
		<%= label_tag :password %><br>
		<%= password_field_tag :password %>
		<br>
	</div>
	
	<div class= "remember"><%= check_box_tag :remember, params[:remember], false %>
	<%= label_tag :'remember me',"remember me", id:"remember" %>
	<%= link_to 'Forgot Password?', new_password_reset_path, id:"forgot" %></div>
	<div class= "actions">
		<%= submit_tag "Login" %>		
	</div>
<% end %>

<%= link_to 'Back', articles_path %>
</div>